{
  "cli": {
    "version": ">= 5.9.1"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": { "ANDROID_SDK_ROOT": "$HOME/Android/Sdk" },
      "ios": {
        "buildConfiguration": "Debug"
      }
    },
    "preview": {
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "env": { "ANDROID_SDK_ROOT": "$HOME/Android/Sdk" },
      "android": {
        "buildType": "apk"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
